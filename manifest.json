{
  "manifest_version": 2,
  "name": "Pomodoro Timer",
  "version": "1.0",
  "description": "A simple Pomodoro Timer Chrome extension.",
  "permissions": [],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png", 
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}